<Window x:Class="DistributedAlgorithms.ListMerge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DistributedAlgorithms"
        mc:Ignorable="d"
        Title="ListMerge" Height="300" Width="700">
    <DockPanel>
        <Border Width="300" Margin="10,10,10,10" DockPanel.Dock="Left" BorderThickness="1" CornerRadius="3">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="StackPanet_Exists" Orientation="Vertical" VerticalAlignment="Top"></StackPanel>
            </ScrollViewer>
        </Border>

        <Border Width="300" Margin ="10,10,10,10" DockPanel.Dock="Right" BorderThickness="1" CornerRadius="3">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="StackPanet_New" Orientation="Vertical" VerticalAlignment="Top"></StackPanel>
            </ScrollViewer>
        </Border>
        <StackPanel VerticalAlignment="Center">
            <Button Content=">" Width="40" Height="50"/>
            <Button Width="40" Height="50">&lt;</Button>

        </StackPanel>
    </DockPanel>
</Window>
