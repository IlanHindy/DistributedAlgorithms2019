<UserControl x:Class="DistributedAlgorithms.SyntaxHighlight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DistributedAlgorithms"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border BorderThickness="1" MaxWidth="800" MaxHeight="500">
            <ScrollViewer Margin="10" Padding="10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="TextBlock_content"></TextBlock>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
